<div class="container">

    <h1>Projects</h1>
    <hr>
    <div class="row">
        <form method="POST" id="new-project-form">
          <div class="col-md-10">
            <input type="text" name="name" id="name" autofocus="autofocus" placeholder="New project name" class="form-control"/>
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-plus"></i> Add project</button>
          </div>
        </form>
    </div>
    <hr>
    {{#each projects}}
    <div class="row">
        <div class="col-md-12">
            <h3><a href="/projects/{{id}}">{{name}}</a></h3>
            <h4 class="progress-text">70/100</h4>
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="70"
              aria-valuemin="0" aria-valuemax="100" style="width:70%">
                <span class="sr-only">{{name}}</span>
              </div>
            </div>
        </div>
    </div>
    <hr>
    {{else}}
    <div class="row">
      <div class="col-md-12">
        <h3 class="text-danger text-center">No projects found</h3>
      </div>
    </div>
    {{/each}}

</div>